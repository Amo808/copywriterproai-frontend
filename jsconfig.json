{
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@/data": ["data/*"],
      "@/redux/*": ["redux/*"],
      "@/utils/*": ["utils/*"],
      "@/config/*": ["config/*"],
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/styles/*": ["styles/*"],
      "@/api/*": ["lib/api/*"],
      "@/api": ["lib/api"],
      "@/layout/*": ["layout/*"],
      "@/lib/*": ["lib/*"]
    }
  },
  "exclude": ["node_modules", ".next"]
}
